pipeline{
    agent any

    environment{
        DOCKER_IMAGE = "e2eimage:latest"
    }

    stages {
        stage("checkout"){
            steps{
                checkout scm
            }
        }
        stage('Build Image'){
            steps{
                script{
                    docker.build('e2eimage:latest')
                }
            }
        }
        stage('run test'){
            steps{
                script{
                    docker.Image("${DOCKER_IMAGE}").inside{
                        sh 'pytest'
                    }
                }
            }
        }
    }
}